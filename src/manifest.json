{
  "name": "Twitch Enhancer",
  "version": "1.3.0",
  "description": "Enhances Twitch.TV",
  "manifest_version": 2,
  "permissions": [
    "*://xayo.pl/*",
    "*://vislaud.com/*",
    "*://api.twitch.tv/*",
    "*://www.twitch.tv/*",
    "storage"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": [
        "js/panel.js",
        "js/card.js",
        "js/vodtime.js"
      ],
      "css": ["css/content.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": [
        "js/viewer_badges.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true,
    "browser_style": true
  },
  "browser_action": {
    "default_popup": "pages/popup.html"
  } 
}