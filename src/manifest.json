{
  "name": "xayo.pl",
  "version": "1.0",
  "description": "Adds support for xayo.pl on Twitch.",
  "manifest_version": 2,
  "permissions": [
    "*://xayo.pl/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "img/icon.png"
  }
}