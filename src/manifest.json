{
  "name": "Enhancer for Twitch",
  "version": "1.2",
  "description": "Enhances Twitch.TV",
  "manifest_version": 2,
  "permissions": [
    "*://xayo.pl/*",
    "storage"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": [
        "js/xayo.js",
        "js/buttons.js"
      ],
      "css": ["css/content.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true,
    "browser_style": true
  },
  "browser_action": {
    "default_popup": "pages/popup.html"
  }
}