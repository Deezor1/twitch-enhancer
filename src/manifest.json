{
    "name": "Twitch Enhancer",
    "description": "Extension that enhances twitch.tv!",
    "version": "3.0.0",
    "manifest_version": 2,
    "content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*"],
			"js": ["js/inject.js"],
			"all_frames": true,
			"runAt": "document_start",
            "css": ["css/content.css"]
		}
	],
    "web_accessible_resources": [
        "js/*.js",
        "img/*.png"
	],
    "icons": {
        "128": "img/icon.png"
    },
    "permissions": [
        "storage",
        "*://*.twitch.tv/*"
    ]
}